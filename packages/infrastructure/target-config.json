{
  "mcp": {
    "lambda": {
      "lambdaArn": "arn:aws:lambda:us-east-1:011528259648:function:ArchitectureReviewStack-McpServerHandler89A0C9C0-qqJwYOe88Yxw",
      "toolSchema": {
        "inlinePayload": [
          {
            "name": "get_document",
            "description": "DynamoDB에서 문서 정보를 조회합니다",
            "inputSchema": {
              "type": "object",
              "properties": {
                "documentId": {"type": "string", "description": "조회할 문서의 ID"}
              },
              "required": ["documentId"]
            }
          },
          {
            "name": "list_documents",
            "description": "DynamoDB에서 모든 문서 목록을 조회합니다",
            "inputSchema": {
              "type": "object",
              "properties": {
                "limit": {"type": "number", "description": "조회할 문서 수"}
              }
            }
          },
          {
            "name": "update_review",
            "description": "문서의 검토 정보를 업데이트합니다",
            "inputSchema": {
              "type": "object",
              "properties": {
                "documentId": {"type": "string"},
                "reviewer": {"type": "string"},
                "architectureOverview": {"type": "string"},
                "reviewDate": {"type": "string"},
                "reviewCompleted": {"type": "boolean"}
              },
              "required": ["documentId"]
            }
          },
          {
            "name": "save_review_to_s3",
            "description": "검토 결과를 마크다운 형식으로 S3에 저장합니다. 반드시 줄바꿈을 포함한 깔끔한 마크다운 형식으로 작성하세요. 제목(#, ##, ###) 앞뒤, 목록 항목, 단락 사이에 빈 줄(\\n\\n)을 추가하세요.",
            "inputSchema": {
              "type": "object",
              "properties": {
                "documentId": {"type": "string", "description": "문서 ID"},
                "reviewContent": {"type": "string", "description": "검토 내용 (마크다운 형식, 줄바꿈 \\n 포함 필수)"},
                "filename": {"type": "string", "description": "저장할 파일명 (기본값: review.md)"}
              },
              "required": ["documentId", "reviewContent"]
            }
          },
          {
            "name": "generate_diagram",
            "description": "AWS 아키텍처 다이어그램을 Mermaid 형식으로 생성하여 S3에 저장합니다. 수정 가능한 텍스트 기반 다이어그램입니다.",
            "inputSchema": {
              "type": "object",
              "properties": {
                "documentId": {"type": "string", "description": "문서 ID"},
                "diagramType": {"type": "string", "description": "다이어그램 유형 (quicksight-bi 또는 generic)"},
                "description": {"type": "string", "description": "다이어그램 설명"}
              },
              "required": ["documentId"]
            }
          }
        ]
      }
    }
  }
}
